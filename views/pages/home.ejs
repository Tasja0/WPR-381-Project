<%- include('../partials/header') %>

<main class="container">
  <!-- Hero Section -->
  <section class="hero-section text-center">
    <h1 class="display-5 fw-bold">Welcome to Our Community Portal</h1>
    <p class="lead">Join our vibrant community and stay updated with upcoming events</p>
  </section>

  <!-- Events Section -->
  <section class="events-section">
    <h2 class="text-center mb-5">Upcoming Events</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% if (events.length > 0) { %>
        <% events.forEach(event => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <img src="/images/<%= event.image %>" class="card-img-top" alt="<%= event.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <div class="card-text">
                  <p class="mb-1"><i class="bi bi-calendar-event"></i> <strong>Date:</strong> <%= event.date %></p>
                  <p><i class="bi bi-geo-alt"></i> <strong>Location:</strong> <%= event.location %></p>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">No upcoming events at the moment. Check back soon!</div>
        </div>
      <% } %>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
